<?xml version="1.0" encoding="UTF-8"?>
<canvas id="Illarion">
    <image id="BottomFrame" style="gui_bottom"/>
    <image id="TopFrame" x="768" y="512" style="gui_top"/>
    <container x="864" y="609" width="160" height="160" clip="true">
        <image id="Minimap" style="minimap" originX="80" originY="80" scaleX="2" scaleY="2"/>
    </container>
    <container x="0" y="140" width="784" height="228" background="gui_chat" clip="true">
        <verticalGroup id="Chat" align="bottom" columnAlign="left" fillParent="true" padLeft="12" padTop="8"
                       padBottom="8">
            <container id="ChatInputContainer" width="784" height="5">
                <textField id="ChatInput" keyTyped="chatKeyTyped" />
            </container>
        </verticalGroup>
    </container>
    <canvas x="385" y="0" width="71" height="120">
        <image id="Counter" style="gui_counter"/>
        <textField id="CounterValue" style="gui_counter_value" x="8" y="55" width="53" height="30" text="250"
                   maxLength="3" alignment="center"/>
        <label id="CounterTime" style="gui_counter_time" labelAlign="center" lineAlign="center" x="35" y="14"/>
    </canvas>
    <canvas x="848" y="454" width="177" height="139">
        <image id="Status" style="gui_status"/>
        <progressBar id="Health" style="status_health" x="53" y="31" vertical="true" value="0" width="12" height="80"
                     animateDuration="0.5"/>
        <progressBar id="Food" style="status_food" x="81" y="31" vertical="true" value="0" width="12" height="80"
                     animateDuration="0.5"/>
        <progressBar id="Mana" style="status_mana" x="109" y="31" vertical="true" value="0" width="12" height="80"
                     animateDuration="0.5"/>
    </canvas>
    <:macro alias="inventorySlot" replace="" id="" x="" y="">
        <inputMask mask="inv_slot" x="{x}" y="{y}" width="78" height="39">
            <stack>
                <button style="inv_slot">
                    <imageButton id="{id}" style="hidden" width="78" height="39" onclick="slotClick">
                        <draggable blockInput="false" />
                    </imageButton>
                </button>
            </stack>
        </inputMask>
    </:macro>
    <canvas x="846">
        <:inventorySlot id="inventory:12" x="59" y="78" />
